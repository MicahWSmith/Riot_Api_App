<Page x:ConnectionId='1'
    x:Class="ZillowAPIApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZillowAPIApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <CollectionViewSource x:ConnectionId='2' x:Name="ChampionsCollection"                                          />
        <DataTemplate x:ConnectionId='3' x:Name="ChampionsTemplate"                                 >
            <TextBlock x:ConnectionId='4'                     />
        </DataTemplate>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="831"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:ConnectionId='5' x:Name="searchTextbox"
                                                                                                      
                 PlaceholderText="Search Champions"
                 FontSize="24"
                 Height="50"
                 Grid.Row="0"
                 Grid.Column="0">
        </TextBox>
        <ScrollViewer Grid.Row="1" Grid.Column="0">
            <ListView x:ConnectionId='6' ItemsSource="{Binding Source={StaticResource ChampionsCollection}}"
                      ItemTemplate="{Binding Source={StaticResource ChampionsTemplate}}"
                                                                                        
                      BorderBrush="Gold"
                      x:Name="NameListView"
                      x:FieldModifier="public"/>
        </ScrollViewer>
    </Grid>
    <Page.TopAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='7' Icon="Filter" Label="Filter Results" ToolTipService.ToolTip="Filter Results"                           />
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='8' Label="About" ToolTipService.ToolTip="View App Info"                          ></AppBarButton>
                <AppBarButton x:ConnectionId='9' Label="Exit" ToolTipService.ToolTip="Exit Application"                         ></AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.TopAppBar>
</Page>

